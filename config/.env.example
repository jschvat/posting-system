# Environment Configuration Template for Social Media Posting Platform
# Copy this file to .env and customize for your environment

# ===================
# ENVIRONMENT
# ===================
NODE_ENV=development
APP_ENV=development

# ===================
# SERVER CONFIGURATION
# ===================
# Backend API Server
API_PORT=3002
API_HOST=localhost
API_PROTOCOL=http

# Frontend Development Server
FRONTEND_PORT=3000
FRONTEND_HOST=localhost
FRONTEND_PROTOCOL=http

# ===================
# DATABASE CONFIGURATION
# ===================
# PostgreSQL Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=posting_system
DB_USER=dev_user
DB_PASSWORD=dev_password
DB_SSL=false

# Connection Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=0
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=10000

# ===================
# AUTHENTICATION & SECURITY
# ===================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=social-media-platform
JWT_AUDIENCE=social-media-users

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# ===================
# FILE UPLOAD CONFIGURATION
# ===================
# File Size Limits
MAX_FILE_SIZE=10485760
MAX_FILES=5

# Upload Directory
UPLOAD_DIR=../uploads

# Allowed File Types
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/ogg
ALLOWED_AUDIO_TYPES=audio/mp3,audio/wav,audio/ogg
ALLOWED_DOC_TYPES=application/pdf,text/plain

# Image Processing
IMAGE_QUALITY=80
THUMBNAIL_SIZE=300
AVATAR_SIZE=150

# ===================
# RATE LIMITING
# ===================
# General API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Rate Limiting
UPLOAD_RATE_WINDOW_MS=3600000
UPLOAD_RATE_MAX_REQUESTS=20

# Authentication Rate Limiting
AUTH_RATE_WINDOW_MS=900000
AUTH_RATE_MAX_REQUESTS=5

# ===================
# CORS CONFIGURATION
# ===================
CORS_ORIGIN=http://localhost:3000,http://localhost:3004
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=86400

# ===================
# FEATURE FLAGS
# ===================
ENABLE_FILE_UPLOAD=true
ENABLE_VIDEO_UPLOAD=true
ENABLE_EMOJI_REACTIONS=true
ENABLE_NESTED_COMMENTS=true
ENABLE_USER_PROFILES=true
ENABLE_NOTIFICATIONS=false
ENABLE_REAL_TIME=false

# Content Limits
MAX_COMMENT_DEPTH=5
MAX_POST_LENGTH=10000
MAX_COMMENT_LENGTH=2000
MAX_BIO_LENGTH=500

# ===================
# LOGGING CONFIGURATION
# ===================
LOG_LEVEL=debug
LOG_FILE=
LOG_CONSOLE=true
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# ===================
# CACHE CONFIGURATION (REDIS)
# ===================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# ===================
# EMAIL CONFIGURATION
# ===================
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@localhost
EMAIL_TEMPLATE_WELCOME=welcome
EMAIL_TEMPLATE_RESET=reset-password

# ===================
# EXTERNAL SERVICES
# ===================
# Facebook Integration
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Google Integration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Cloudinary (Media Processing)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ===================
# MONITORING & PERFORMANCE
# ===================
ENABLE_APM=false
APM_SERVICE_NAME=social-media-api
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000